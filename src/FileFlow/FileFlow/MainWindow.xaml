<Window x:Class="FileFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileFlow 配置" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
    Background="#F5F7FA">
    <Window.Resources>
        <!-- 无边框图标按钮通用样式 -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- 关键：用一个 Border 显式绑定 Background -->
                        <Border 
                    x:Name="border" 
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A506B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#253544"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- 最小化图标 -->
        <Path x:Key="MinimizeIcon" 
              Data="M0,6 L12,6 L12,8 L0,8 Z" 
              Fill="White" 
              Stretch="Uniform"
              Width="12" Height="12"/>
        <!-- 关闭图标 -->
        <Path x:Key="CloseIcon" 
              Data="M1,1 L11,11 M1,11 L11,1" 
              Stroke="White" 
              StrokeThickness="1.5"
              Stretch="Uniform"
              Width="12" Height="12"/>
    </Window.Resources>
    <Grid>
        <!-- Header -->
        <StackPanel>
            <Border Background="#2C3E50" 
                    Margin="0,0,0,24" 
                    Height="48" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="White" FontSize="18" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center" Grid.Column="0">
                        <Run Text="📁" FontSize="18"/>
                        <Run Text="FileFlow 配置"/>
                    </TextBlock>
                    
                    <!--最小化-->
                    <Button x:Name="MinButton" 
                            Grid.Column="1" 
                            Style="{StaticResource WindowControlButton}" 
                            Content="{StaticResource MinimizeIcon}"
                            Click="MinButton_Click"/>

                    <!--关闭窗口-->
                    <Button x:Name="CloseButton" 
                            Grid.Column="2" 
                            Style="{StaticResource WindowControlButton}"
                            Content="{StaticResource CloseIcon}"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- 根目录设置 -->
            <GroupBox Header="📁 任务箱根目录" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="RootPathBox" Grid.Column="0"  IsReadOnly="True" Padding="8" BorderThickness="1" BorderBrush="#DDD" Background="#FAFAFA" FontSize="15" VerticalContentAlignment="Center"/>
                    <Button Content="浏览..." Grid.Column="1" Padding="10,6" Margin="12,0,0,0" Background="#3498DB" Foreground="White" BorderThickness="0" Click="BrowseRootFolder_Click"/>
                </Grid>
            </GroupBox>

            <!-- 功能选项 -->
            <GroupBox Header="⚙️ 功能选项" Margin="0,0,0,20">
                <StackPanel>
                    <CheckBox Content="移动后自动打开目标文件夹" IsChecked="{Binding AutoOpenTarget}" Margin="0,0,0,10"/>
                    <CheckBox Content="使用快捷方式代替移动（保留原文件）" IsChecked="{Binding UseShortcut}" Margin="0,0,0,10"/>
                    <CheckBox Content="启用操作日志" IsChecked="{Binding EnableLogging}"/>
                </StackPanel>
            </GroupBox>

            <!-- 状态文件夹 -->
            <GroupBox Header="📂 状态文件夹" Margin="0,0,0,20">
                <ItemsControl ItemsSource="{Binding StateFolders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="14" BorderThickness="1" BorderBrush="#EEE" CornerRadius="10" Margin="0,0,16,16" Background="#F9FBFD">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{Binding Color}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Path}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <!-- 日志区域 -->
            <GroupBox Header="📝 最近操作日志" Margin="0,0,0,20">
                <TextBox IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="#F9FBFD" BorderBrush="#EEE" Padding="14" FontFamily="Consolas" FontSize="13" Foreground="#666" Height="120"/>
            </GroupBox>

            <!-- 按钮组 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="卸载右键菜单" Padding="10,6" Background="#95A5A6" Foreground="White" BorderThickness="0" Width="120" Click="UninstallContextMenu_Click"/>
                <Button Content="注册右键菜单" Padding="10,6" Background="#3498DB" Foreground="White" BorderThickness="0" Width="120" Click="InstallContextMenu_Click"/>
                <Button Content="应用并保存" Padding="10,6" Background="#E74C3C" Foreground="White" BorderThickness="0" Width="120" Click="SaveConfig_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>